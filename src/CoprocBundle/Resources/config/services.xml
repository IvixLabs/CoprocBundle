<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="ivixlabs.coproc.factory" class="IvixLabs\CoprocBundle\Factory\CoprocFactory">
            <argument>%ivixlabs.coproc.console_path%</argument>
            <argument type="service" id="kernel"/>
        </service>
        <service id="ivixlabs.coproc.command.launcher" class="IvixLabs\CoprocBundle\Command\CoprocSlaveLauncherCommand">
            <tag name="console.command"/>
            <argument type="service" id="ivixlabs.coproc.factory"/>
        </service>
    </services>
</container>
